<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="36dp"
    tools:context=".CreatePdfFragment">

    <EditText
        android:id="@+id/etPdfText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add your text here"
        app:layout_constraintBottom_toTopOf="@+id/btnToPdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export PDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPdfText" />

</androidx.constraintlayout.widget.ConstraintLayout>